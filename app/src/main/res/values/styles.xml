<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Transparent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <item name="android:windowBackground">@drawable/transparent_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorForeground">#fff</item>
    </style>

    <style name="alpha75">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <item name="android:windowBackground">@drawable/alpha75_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorForeground">#fff</item>
    </style>

    <drawable name="transparent_background">#00000000</drawable>
    <drawable name="alpha75_background">#BF000000</drawable>

    <style name="Animation.Floating" parent="android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/floating_activity_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/floating_activity_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/floating_activity_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/floating_activity_close_exit</item>
    </style>

    <style name="Theme.MessageBox.Floating" parent="@style/Theme.MessageBox">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.Floating</item>
    </style>
</resources>